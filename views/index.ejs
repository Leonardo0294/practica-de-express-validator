<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulario de Registro</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Formulario de Registro</h1>
    
    <% if (validaciones && validaciones.length > 0) { %>
      <div class="alert alert-danger">
        <h3>Error en el formulario:</h3>
        <ul>
          <% validaciones.forEach(validation => { %>
            <li><%= validation.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form action="/registrar" method="post">
      <div class="form-group">
        <label for="nya">Nombre y Apellido:</label>
        <input type="text" id="nya" name="nya" class="form-control" value="<%= valores && valores.nya ? valores.nya : '' %>">
      </div>
      <div class="form-group">
        <label for="email">Correo Electr√≥nico:</label>
        <input type="email" id="email" name="email" class="form-control" value="<%= valores && valores.email ? valores.email : '' %>">
      </div>
      <div class="form-group">
        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="edad" class="form-control" value="<%= valores && valores.edad ? valores.edad : '' %>">
      </div>
      <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
  </div>
</body>
</html>